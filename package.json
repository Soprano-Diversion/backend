{
  "name": "server",
  "version": "0.0.1",
  "description": "Server for Sketch2Code",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev --transpile-only --no-notify index.ts",
    "start": "npm run prisma:update && npm run start:server",
    "start:server": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "prisma:update": "prisma db push --schema=./prisma/schema.prisma",
    "build": "npm run generate && tsc",
    "build:dev": "tsc",
    "generate": "npm run generate:nexus && npm run generate:prisma",
    "generate:nexus": "ts-node --transpile-only --project tsconfig.json config/nexus",
    "generate:prisma": "prisma generate --schema=./prisma/schema.prisma",
    "lint": "npx eslint --fix \"**/*.ts\"",
    "lint:find": "npx eslint \"**/*.tx\"",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "package:container": "docker build .",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down --volumes",
    "db:migrate-save": "prisma migrate dev",
    "db:migrate-up": "prisma migrate deploy",
    "db:clean": "prisma migrate reset"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Shurtu-gal/soprano-backend.git"
  },
  "keywords": [
    "Sketch2Code"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shurtu-gal/soprano-backend/issues"
  },
  "homepage": "https://github.com/Shurtu-gal/soprano-backend#readme",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multiparty": "^0.0.36",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "prisma-erd-generator": "^1.11.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-type": "^16.5.4",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.4",
    "imagekit": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "multiparty": "^4.2.3",
    "nexus": "^1.3.0",
    "prisma": "^5.6.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0"
  }
}
